{
  "schemaVersion": 1,
  "id": "lignin",
  "version": "${version}",
  "name": "Lignin",
  "description": "Minecraft pixel art & UI rendering toolkit",
  "authors": [
    "Enderpalm"
  ],
  "contact": {
    "sources": "https://github.com/enderpalm/Lignin",
    "issues": "https://github.com/enderpalm/Lignin/issues"
  },
  "entrypoints": {
    "main": [
      "dev.enderpalm.lignin.Lignin"
    ]
  },
  "license": "GNU LPGL-3.0",
  "environment": "*",
  "accessWidener": "lignin.accesswidener",
  "mixins": ["lignin.mixins.json"],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": "${minecraft_version}"
  },
  "custom": {
    "modmenu": {
      "badges": ["library"]
    },
    "loom:injected_interfaces": {
      "net/minecraft/class_2583": ["dev/enderpalm/lignin/text/StyleInjector"]
    }
  }
}
